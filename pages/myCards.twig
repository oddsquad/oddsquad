{{ DOCTYPE }}
<html>
	<head>
		<title>My Collection</title>
		{{ SCRIPTS }}
		<script type="text/javascript">
			util.request("GET", "/api/myCards")
			.then(function(res) {
				return util.waitForWindowLoad()
					.then(function() {
						var j = JSON.parse(res);
						return Q.all(j.map(function(e) {
							return util.loadCard(e.card_id, document.body, "collectionCard")
								.catch(function(err) {
									console.warn(err);
								});
						}));
					})
			})
			.catch(function(err) {
				console.error(err);
			});
		</script>
		<style type="text/css">
			.collectionCard {
				width: 15%
			}
		</style>
	</head>
	<body>
		{{ PAGE_HEADER }}
	</body>
</html>
